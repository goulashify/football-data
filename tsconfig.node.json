{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@gen/*": [
        "./src-generated/*"
      ]
    }
  },
  "include": ["vite.config.ts"]
}
